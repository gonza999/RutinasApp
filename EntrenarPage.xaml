<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rutinas.EntrenarPage"
             Title="EntrenarPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Fecha actual -->
            <Label Text="Fecha de hoy:"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"/>
            <Label x:Name="FechaLabel"
                   FontSize="16"/>

            <!-- Selección de rutina -->
            <Label Text="Seleccioná una rutina:"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <Picker x:Name="RutinaPicker"
        BackgroundColor="LightBlue"
        TextColor="Black"
        FontSize="16"
        Title="Seleccione rutina"
        SelectedIndexChanged="OnRutinaSeleccionada" />

            <CollectionView x:Name="EjerciciosView">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="2.5*, Auto, *, *"
                          Padding="0,0,0,10"
                          BackgroundColor="#eeeeee">
                        <Label Text="Ejercicio"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Grid.Column="0"
                               VerticalOptions="Center"/>

                        <Label Text="Serie"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Label Text="Reps"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Grid.Column="2"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Label Text="Peso"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Grid.Column="3"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Grid>
                </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <!-- Nombre del ejercicio -->
                            <Label Text="{Binding Nombre}"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,10,0,5"
                   TextColor="Black" />

                            <!-- Tabla de series -->
                            <CollectionView ItemsSource="{Binding Series}"
                            Margin="0,0,0,10">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="2.5*, Auto, *, *"
                              ColumnSpacing="15"
                              Padding="0,0,0,5">

                                            <!-- Espacio reservado para Ejercicio (vacío para alineación) -->
                                            <Label Text=""
                                   Grid.Column="0" />

                                            <!-- Número de serie -->
                                            <Label Text="{Binding Numero}"
                                   Grid.Column="1"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Black"/>

                                            <!-- Entry para repeticiones -->
                                            <Entry Placeholder="Reps"
                                   Keyboard="Numeric"
                                   Text="{Binding Repeticiones}"
                                   Grid.Column="2"
                                   HorizontalOptions="Center"
                                   WidthRequest="80"
                                   BackgroundColor="#f5f5f5"
                                   TextColor="Black"/>

                                            <!-- Entry para peso -->
                                            <Entry Placeholder="Peso"
                                   Keyboard="Numeric"
                                   Text="{Binding Peso}"
                                   Grid.Column="3"
                                   HorizontalOptions="Center"
                                   WidthRequest="80"
                                   BackgroundColor="#f5f5f5"
                                   TextColor="Black"/>

                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>


            <Button Text="Guardar Día"
                    FontSize="18"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnGuardarDiaClicked"
                    Margin="0,20,0,40"
                    CornerRadius="10"
                    HeightRequest="50"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>