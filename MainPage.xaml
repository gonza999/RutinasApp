<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rutinas.MainPage"
             Title="Rutinas App"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30"
                         VerticalOptions="Center">

            <Label Text="Rutinas App" 
               FontSize="50"
               HorizontalOptions="Center" />

            <Button x:Name="HistorialButton"
                Text="📅 Historial - Calendario"
                FontSize="30"
                Clicked="OnHistorialClicked"/>

            <Button x:Name="EntrenarButton"
                Text="🏋️ Entrenar"
                FontSize="30"
                Clicked="OnEntrenarClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
